<div class="row" style="margin-top: 50px">
  <div class="col-sm-12 col-md-6">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Sign Up</h3>
      </div>


      <div class="panel-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-horizontal', :role => 'form'} ) do |f| %>
          <%= devise_error_messages! %>
          <!--<form role="form" class="form-horizontal" role="form">-->

          <%#= f.email_field :email, autofocus: true, autocomplete: "email" %>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="field-1">Email</label>
            <div class="col-sm-10">
              <div class="input-group">
											<span class="input-group-addon">
												<i class="linecons-mail"></i>
											</span>
                <input type="email" id="user_email" name="user[email]" class="form-control" placeholder="Enter your email">
              </div>
            </div>
          </div>

          <div class="form-group-separator"></div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="field-2">Password</label>

            <div class="col-sm-10">
              <input type="password" id="user_email" name="user[email]" class="form-control" placeholder="">

                  <em>(6 characters minimum)</em>

              <input type="password" id="user_password_confirmation" name="user[password_confirmation]" class="form-control" placeholder="">

            </div>
          </div>

          <div class="form-group-separator"></div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="field-1">First Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="user_first_name" name="user[first_name]" placeholder="">
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="field-1">Last Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="user_last_name" name="user[last_name]" placeholder="">
            </div>
          </div>

          <div class="form-group">
            <button type="submit" class="btn btn-success text-left">
              <i class="fa-lock"></i>
              Register
            </button>
          </div>

          <%= render "devise/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


