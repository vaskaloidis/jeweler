<div class="login-container">

  <div class="row">

    <div class="col-sm-6">

      <div class="errors-container">
        <% if notice %>
          <div class="alert alert-success">
             <%= notice %>
          </div>
        <% end %>
        <% if alert %>
          <div class="alert alert-danger">
            <%= alert %>
          </div>
        <% end %>
      </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'login-form', :role => 'form'}) do |f| %>
          <!--<form method="post" role="form" id="login" class="login-form fade-in-effect">-->

            <div class="login-header">
              <a href="<%= root_url %>" class="logo">
                <img src="<%= image_path 'jeweler-logo-mini.png' %>" alt="" width="80"/>
              </a><br>
              <h3 class="muted">Login</h3>
            </div>

              <div class="form-group">
                <label class="control-label" for="user_email">Email</label>
                <input type="text" class="form-control" name="user[email]" id="user_email" autocomplete="off"/>

              </div>

              <div class="form-group">
                <label class="control-label" for="user_password">Password</label>
                <input type="password" class="form-control" name="user[password]" id="user_password" autocomplete="off"/>
              </div>


              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>


              <div class="form-group">
                <button type="submit" id="login_submit_btn" class="btn btn-success btn-block text-left">
                  <i class="fa-lock"></i>
                  Log In
                </button>
              </div>

            <% end %>

            <%= render "devise/shared/links" %>

          </form>

      </div>

    </div>

  </div>
