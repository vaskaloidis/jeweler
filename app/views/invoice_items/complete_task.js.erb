<% if @task.valid? %>
  $("#invoice_panel_<%= @invoice.id.to_s %>_container").html('<%= j render 'invoices/invoice_panel', invoice: @invoice %>');

  console.log(<%= ApplicationHelper.sprint_percent(@invoice.project) %>);

  $('#sprint_gauge_container').animate({
      width: '0'
  });

  $('#sprint_gauge_container').animate({
      width: '<%= ApplicationHelper.sprint_percent(@invoice.project) %>%'
  });

<% if @invoice.sprint_complete? %>
    toastr.success('Sprint Complete. Congragulations!!');
  <% else %>
    toastr.success('Task Complete.')
  <% end %>
<% else %>
  toastr.error('Task could not be completed. (Error. We are working to fix this)');
<% end %>