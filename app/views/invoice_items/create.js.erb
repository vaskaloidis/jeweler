$("#invoice_items_<%= @invoice.id.to_s %>_hidden_row").hide('slide')
<%= render 'invoices/re-render_invoice_panel', invoice: @invoice %>

<% if @error_msgs.empty? %>
  toastr.success('Task Created Successfully');
<% else %>
  <% @error_msgs.each do |error| %>
    toastr.error('Error creating Task: <%=  error %>');
  <% end %>
<% end %>