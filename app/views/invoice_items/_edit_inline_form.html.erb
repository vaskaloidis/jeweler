<%= form_with model: task, class: 'form-inline', remote: true do |f| %>
  <div class="form-group">
    <%= f.check_box :complete, class: 'iswitch iswitch-info' %>
  </div>

  <div class="form-group">
    <%= f.text_field :description, style: 'width:100%' %>
  </div>

  <div class="form-group">
    <%= f.text_field :rate %>
  </div>

  <% if task.invoice.only_planned? %>
    <div class="form-group">
      <% if task.planned_hours.nil? %>
        <%= f.text_field :planned_hours, :value => 'Estimated Hours' %>
      <% else %>
        <%= f.text_field :planned_hours %>

      <% end %>
    </div>

    <div class="form-group">
      <% if task.hours.nil? %>
        <%= f.text_field :hours, :value => 'Reported Hours' %>
      <% else %>
        <%= f.text_field :hours %>
      <% end %>
    </div>

  <% else %>
    <div class="form-group">
      <% if task.planned_hours.nil? %>
        <%= f.text_field :planned_hours, :value => 'Estimated Hours' %>
      <% else %>
        <%= f.text_field :planned_hours %>
      <% end %>
    </div>

    <div class="form-group">
      <% if task.hours.nil? %>
        <%= f.text_field :hours, :value => 'Reported Hours' %>
      <% else %>
        <%= f.text_field :hours %>
      <% end %>
    </div>


      <div class="form-group pull-right">
        <%= f.hidden_field :invoice_id, :value => task.invoice.id %>
        <div class="btn-group">
          <button type="submit" class="btn btn-sm btn-success"><i class="fas fa-save"></i></button>
          <%#= f.submit '<i class="fas fa-save"></i>'.html_safe, :class => 'btn-sm btn-success', style: 'display:inline' %>
          <%= link_to '<i style="padding-right: 4px;" class="fas fa-trash-alt"></i>'.html_safe,
                      delete_task_inline_path(task.id), data: {confirm: "Are you sure?"}, remote: true,
                      class: 'btn btn-sm btn-success', style: '' %>
          <%= link_to '<i class="fas fa-times"></i>'.html_safe, cancel_task_update_path(task.invoice.id), :class => 'btn btn-sm btn-success', style: '' %>
        </div>
      </div>
  <% end %>

<% end %>

