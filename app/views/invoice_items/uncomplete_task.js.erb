<% if @task.valid? %>

  <%= render 'invoices/re-render_invoice_panel', invoice: @invoice %>

  console.log(<%= ApplicationHelper.sprint_percent(@invoice.project) %>);

  $('#sprint_gauge_container').animate({
      width: '0'
  });

  $('#sprint_gauge_container').animate({
      width: '<%= ApplicationHelper.sprint_percent(@invoice.project) %>%'
  });

  toastr.success('Task Un-Completed');
<% else %>
  toastr.error('Your Task Could Not Be Completed');
<% end %>