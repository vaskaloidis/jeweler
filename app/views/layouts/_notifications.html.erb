<% if @project.is_owner(current_user) %>
  <button type="button" class="btn btn-success btn-block text-left">
    Project Owner
    <i class="fa-check pull-right"></i>
  </button>


  <% if @project.current_task.nil? %>
    <div class="alert alert-success">
      Please <a href="#" style="color: white" onclick="$('#task_list').popover('toggle');"><strong>Set a Current Task
      <i class="fas fa-gem"></i></strong></a> You Are Working On.
      <i class="fa-lg fa-check pull-right"></i>
    </div>

  <% else %>

    <% if !@project.payment_requests.empty? %>

      <% unless @project.payment_requests.empty? %>
        <% @project.payment_requests.each do |invoice| %>
          <div id="request_payment_notification_sprint_<%= invoice.id.to_s %>" class="alert alert-danger">
            <strong>Payment Requested For Sprint <%= invoice.sprint.to_s %>.</strong>
            <%= link_to '<small>(Cancel)</small>'.html_safe,
                        cancel_request_payment_path(invoice.id),
                        remote: true %>
          </div>
        <% end %>
      <% end %>

    <% else %>

      <% @project.payment_requests.each do |invoice| %>
        <div style="display:none" id="request_payment_sprint_<%= invoice.sprint.to_s %>" class="alert alert-danger">
          <strong>Payment Requested.</strong> Should arrive shortly.
        </div>
        <div id="request_payment_button_sprint_<%= invoice.sprint.to_s %>">
          <%= link_to 'Request Sprint Payment<i class="fas fa-dollar-sign fa-2x pull-right"></i>'.html_safe,
                      request_payment_path(@project.current_sprint.id),
                      remote: true,
                      :class => 'btn btn-success btn-block text-left' %>
        </div>
      <% end %>

    <% end %>

  <% end %>


<% elsif @project.is_customer(current_user) %>

  <button type="button" class="btn btn-success btn-block text-left">
    Project Member
    <i class="fa-check pull-right"></i>
  </button>

  <% unless @project.payment_requests.empty? %>
    <% @project.payment_requests.each do |invoice| %>
      <div class="alert alert-danger">
        <strong>Payment Requested For Sprint <%= invoice.sprint.to_s %>.</strong> Click here to pay your dev!
      </div>
    <% end %>
  <% end %>

<% end %>