<% if project.is_owner?(current_user) %>
  <button type="button" class="btn btn-success btn-block text-left">
    Project Owner <i class="fa-check pull-right"></i>
  </button>

  <%= link_to new_project_note_path(project.id), class: 'btn btn-success btn-block text-left', remote: true do %>
    Create Sprint <%= project.current_sprint.sprint.to_s %> Note<i class="fas fa-sticky-note pull-right"></i>'
  <% end %>

  <% if project.current_task.nil? %>
    <div class="alert alert-danger">
      Please <a href="#" id="select-current-task-btn"><strong>Select a Current Task.</strong></a>
      <i class="fa-lg fa-check pull-right"></i>
    </div>
    <script>
        $('#select-current-task-btn').click(function () {
            $('#task-list').popover('toggle');
        });
    </script>
  <% end %>

  <% unless project.payment_requests.empty? %>
    <div class="alert alert-danger">
      Payment
      Requested. <%= link_to '<strong>View Payment Requests</strong>'.html_safe, project_payments_path(project) %>
    </div>
  <% end %>

  <% if current_user.stripe_account_id.nil? %>
    <div class="alert alert-danger">
      <i style="padding-left: 6px" class="fab fa-2x fa-stripe pull-right"></i>
      To receive payments, you
      must <%= link_to 'connect with Stripe'.html_safe, root_url + 'users/auth/stripe_connect', class: '' %>
    </div>
  <% end %>

  <% if (current_user.oauth.nil? or current_user.oauth == '') %>
    <% gh_url = 'https://github.com/login/oauth/authorize?client_id=' + ENV['GITHUB_CLIENT_ID'] %>
    <div class="alert alert-danger">
      <i class="fab fa-2x fa-github pull-right"></i>
      Please Connect Jewler with GitHub, <%= link_to 'Here', authorize_github_path %>
    </div>
  <% end %>

  <% unless ApplicationHelper.github_hook_configured?(project) %>
    <div class="alert alert-danger">
      <i class="fab fa-github pull-right"></i>
      You need to add Jewler GitHub Webhook. Add it <%= link_to 'Here', authorize_github_path %>.
    </div>
  <% end %>


<% elsif project.is_customer(current_user) %>

  <button type="button" class="btn btn-success btn-block text-left">
    Project Member <i class="fa-check pull-right"></i>
  </button>

  <% unless project.payment_requests.empty? %>
    <% project.payment_requests.each do |invoice| %>
      <div class="alert alert-danger">
        Payment Requested For Sprint <%= invoice.sprint.to_s %>
        . <%= link_to '<strong>Make Payment</strong>'.html_safe, project_payments_path(invoice.project) %>
      </div>
    <% end %>
  <% end %>

<% end %>