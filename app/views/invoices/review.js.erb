<% if @errors.empty? %>

$("#modal_target").html('<%= j render'invoices/review_customer', invoice: @invoice %>');

<% else %>

  <% @errors.each do |error| %>
    toastr.error('<%= error %>');
  <% end %>

  $("#modal_target").html('<%= j render'invoices/select_customer', invoice: @invoice.sprint, estimate: @invoice.estimate %>');

<% end %>