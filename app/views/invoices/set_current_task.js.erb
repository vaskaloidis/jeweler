<%= render 'invoices/re-render_invoice_panel', invoice: @task.invoice %>

<%= render 'notes/re-render_timeline', notes: @task.invoice.project.sprint_notes, project: @task.invoice.project %>

toastr.success('Current Task Updated.');

$('#sprint_gauge_container').animate({
    width: '<%= ApplicationHelper.sprint_percent(@task.invoice.project) %>%'
});


$('#notifications_container').html('<%= j render 'layouts/notifications', project: @task.invoice.project %>');


$('.link-delete').bind('ajax:beforeSend', function() {
    $('#mySpinner').show();
});

$('.link-delete').bind('ajax:complete', function() {
    $('#mySpinner').hide();
});