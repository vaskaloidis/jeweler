<%= form_with url: new_charge_path, class: 'form-horizontal' do %>

  <% unless display_balances.nil? or display_balances == false %>
    <div class='settings_balance_label'>
      <div class='row'>
        <div class='col-xs-12'>
          <div class='label label-success'>
            Total Project Balance: $<%= (project.total_cost - project.total_payment).to_s %>
          </div>
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-12'>
          <div class='label label-success'>
            <% current_sprint = project.current_sprint %>
            Current Sprint (<%= current_sprint.sprint.to_s %>) Balance: $<%= current_sprint.balance.to_s %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class='row text-center'>
    <h4>Make Payment</h4>
  </div>

  <div class='row'>
    <div class='col-xs-12 col-sm-6 col-sm-4'>
      <div class='form-field' style='color: black'>
        <%= select_tag 'invoice_id',
                       options_from_collection_for_select(project.invoices.order('sprint::integer DESC'), 'id', 'sprint'),
                       prompt: 'Select a Sprint',
                       class: 'form-control payment_form_item',
                       style: 'color:black' %>
      </div>
    </div>
    <div class='col-xs-12 col-sm-6 col-sm-4'>
      <div class='input-group'>
        <span class="input-group-addon">$</span>
        <%= text_field_tag 'amount', 'Payment Amount', class: 'form-control payment_form_item' %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-sm-4">
      <%= submit_tag 'Pay', :class => 'btn-sm btn-success form-control payment_form_item' %><br>
    </div>
  </div>

  <div class='row margin-top-10'>

    <div class='col-xs-12'>
      <div class='form-field'>
        <%= hidden_field_tag :user_id, current_user.id %>
        <%= hidden_field_tag :project_id, project.id %>
        <%= render 'invoices/fee_notice' %>
      </div>
    </div>
  </div>
<% end %>
