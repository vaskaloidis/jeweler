$('.settings-pane').hide('slide');

<% if @payment.valid? %>

  toastr.success('Sprint <%= @payment.invoice.sprint.to_s %> payment made!');

  <%= render 'notes/re-render_timeline', notes: @payment.invoice.project.sprint_notes, project: @payment.invoice.project %>

  <%= render 'payments/re-render_payments_panel', project: @payment.invoice.project, user: current_user %>

  <% unless @sprint_payment.nil? and !@sprint_payment%>
      <%= render 'invoices/re-render_invoice_panel', invoice: @payment.invoice %>
  <% end %>

<% else %>
  toastr.error('Sprint <%= @payment.invoice.sprint.to_s %> payment could not be made.');
<% end %>