$('.settings-pane').hide('slide');

<% if @payment.valid? %>
  toastr.success('Sprint <%= @payment.invoice.sprint.to_s %> payment made!');
  $("#settings_container").html('<%= j render 'layouts/settings_pane', project: @payment.invoice.project, user: @user %>');

  <% unless @sprint_payment.nil? and !@sprint_payment%>
      $("#invoice_panel_<%= @payment.invoice.id.to_s %>_container").html('<%= j render 'invoices/invoice_panel', invoice: @payment.invoice  %>');
  <% end %>

<% else %>
  toastr.error('Sprint <%= @payment.invoice.sprint.to_s %> payment could not be made.');
<% end %>