<%= render 'charges/charge_form', project: @project, sprint: @sprint, amount: @amount.to_d, customer: @customer, payment_note: @payment_note %>

<% unless @error_msgs.empty? %>
  <script>
      <% @error_msgs.each do |error| %>
      toastr.error('<%= error %>');
      <% end %>
  </script>
<% end %>