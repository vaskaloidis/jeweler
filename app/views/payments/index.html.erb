<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Payment type</th>
      <th>Payment identifier</th>
      <th>Payment note</th>
      <th>Ammount</th>
      <th>Belongs to</th>
      <th>Belongs to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.payment_type %></td>
        <td><%= payment.payment_identifier %></td>
        <td><%= payment.payment_note %></td>
        <td><%= payment.ammount %></td>
        <td><%= payment.belongs_to %></td>
        <td><%= payment.belongs_to %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

