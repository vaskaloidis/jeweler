<div class="modal fade custom-width" id="create_note_modal_full_timeline">
  <div class="modal-dialog" style="width: 60%;">
    <div class="modal-content">
      <div class="modal-header">
        Create Note / Demo
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </div>
      <div class="modal-body">

          <div class="row">
            <div class="col-xs-12">
                <h4>Create Note</h4>
                <%= simple_form_for(@new_note, remote: true, html: {class: "form form-horizontal"}) do |form| %>
                  <div class="form-group">
                    <%= form.text_area :content, class: 'form-control col-xs-3' %>
                    <hr>
                    <%= form.submit "Create Note", :class => 'btn btn-success' %>
                  </div>
                <% end %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
                <h4>Create Demo</h4>
                <%= simple_form_for(@new_demo, remote: true, html: {class: "form form-horizontal"}) do |form| %>
                  <div class="form-group">
                    <%= form.text_field :content, class: 'form-control col-xs-3' %>
                    <hr>
                    <%= form.submit "Create Demo", :class => 'btn btn-success' %>
                  </div>
                <% end %>
            </div>
          </div>

      </div>
      <div style="border:0px solid white" class="modal-footer">
        <button type="button" onclick="$('#create_note_modal_full_timeline').modal('hide'); return false;" class="btn btn-white" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
