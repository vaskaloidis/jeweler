<small>
  <%= link_to 'Discuss', fetch_discussion_path(note.id), remote: true, class: 'btn btn-sm btn-success' %>
  <% if note.user_id == current_user.id %>

    <% if note.note_type != 'commit' and note.note_type != 'project_update' %>
    <%# Debugging Helper: if note.note_type != 'commit' %>

      <%= link_to '<i style="padding-right: 1px; margin-right:0px" class="far fa-edit"></i>'.html_safe,
                  edit_note_modal_path(note.id), remote: true, class: 'btn btn-sm btn-success' %>
      <%= link_to '<i style="padding-right: 4px;" class="fas fa-trash-alt"></i>'.html_safe,
                  delete_note_inline_path(note.id), remote: true, class: 'btn btn-sm btn-success' %>

      <% unless note.commit_diff_path.nil? %>
        <%= link_to '<i style="padding-right: 4px;" class="fab fa-github"></i>'.html_safe,
                    note.commit_diff_path, class: 'btn btn-sm btn-success' %>
      <% end %>

    <% end %>

  <% end %>
</small>