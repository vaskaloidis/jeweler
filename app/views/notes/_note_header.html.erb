<div class="timeline_title">
  <div class="pull-right">
    <% unless note.sprint.nil? %>
      <span id="timeline_sprint_task_message" class="alert alert-success">
        Sprint <%= note.sprint.sprint.to_s %>
      </span>
      <% unless note.task.nil? %>
          <span id="timeline_sprint_task_message" class="alert alert-success">
            #task<%= note.sprint.sprint.to_s + note.task.get_letter %>
          </span>
      <% end %>
    <% end %>
  </div>
  <h2>
    <%= note.author.first_name %> <%= note.author.last_name %>
    <%= ApplicationHelper.note_event_action(note) %>
  </h2>
</div>