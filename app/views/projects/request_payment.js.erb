<% if @sprint.payment_due %>
  toastr.success('Payment Requested.');

  <%= render 'renderers/re-render_sprint_panel', sprint: @sprint %>
  <%= render 'renderers/re-render_notifications', project:@sprint.project %>
  <%= render 'payments/re-render_payments_panel', project: @sprint.project, user: @user %>
  <%= render 'notes/re-render_timeline', notes: @sprint.project.sprint_notes, project: @sprint.project %>

  $("#modal_target").html('<%= j render'sprints/invoice_select_customer', sprint: @sprint, estimate: false %>');
  <%= render 'renderers/render_modal', title: 'Invoice' %>

<% else %>
  toastr.error('You must report hours to request payment');
<% end %>