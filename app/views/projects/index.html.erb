<% if notice != '' && notice != nil %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    Owner Projects
  </div>

  <div class="panel-body">
    <div class="row">
      <div class="col-sm-12">
        <div class="list-group">

          <% @owner_projects.each do |project| %>
            <a href="<%= project_path(project) %>" class="list-group-item">
              <h4 class="list-group-item-heading"><%= project.name %></h4>
              <p class="list-group-item-text">
                  <%= project.description %> <br>
                <span class="label label-success"><%= project.language %></span>
                <span class="label label-success">Sprint <%= project.sprint_current %> of <%= project.sprint_total %></span>
                <%#= link_to 'Open Demo URL', project.demo_url, class: 'btn btn-success' %>
                <%#= link_to 'Edit', edit_project_path(project), class: 'btn btn-warning' %>
                <%#= link_to 'Destroy',
                          project,
                          class: 'btn btn-danger',
                          method: :delete,
                          data: {confirm: 'Are you sure you want to delete project?'} %>
              </p>
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<br>

<div class="panel panel-default">
  <div class="panel-heading">
    Customer Projects
  </div>

  <div class="panel-body">
    <div class="row">
      <div class="col-sm-12">
        <div class="list-group">

          <% @customer_projects.each do |project| %>
            <!-- Add active to href class if needed -->
            <a href="<%= project_path(project) %>" class="list-group-item">
              <h4 class="list-group-item-heading"><%= project.name %></h4>
              <p class="list-group-item-text">
                <%= project.description %> <br>
                <small><%= project.language %> /
                  <%= project.sprint_current %> of <%= project.sprint_total %> /
                  <%= project.demo_url %>
                </small>
              </p>
            </a>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
