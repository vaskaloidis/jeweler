<div id="rootwizard" class="form-wizard">

  <!-- Sprint Tab Numbers -->
  <ul id="sprint-tabs" class="tabs">
    <%= render 'invoices/sprint_tabs', sprints: project.sprints %>
  </ul>

  <div id="sprint_gauge_container" class="progress-indicator"
       style="width: 0%;">
    <span></span>
  </div>

  <script>
      $('#sprint_gauge_container').animate({
          width: '<%= ApplicationHelper.sprint_percent(project) %>%'
      }, {duration: 1000});
  </script>

  <div style="margin-top:0px;" class="tab-content task-list">
    <% #TODO:Replace count with sprint in loop below %>

    <% project.sprints.each do |sprint| %>

      <% if sprint == project.current_sprint %>

        <div class="invoice-tab active" id="sprint_tab_<%= sprint.sprint.to_s %>" style="">
          <div class="current_invoice_panel" id="invoice_panel_<%= sprint.sprint.to_s %>_container">
            <%= render 'invoices/invoice_panel', invoice: sprint %>
          </div>
        </div>

      <% else %>

        <div class="invoice-tab" id="sprint_tab_<%= sprint.sprint.to_s %>" style="display:none">
          <div id="invoice_panel_<%= sprint.sprint.to_s %>_container">
          </div>
        </div>

      <% end %>

    <% end %>

  </div>

</div>