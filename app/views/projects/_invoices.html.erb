<div class="panel panel-default">
  <div class="panel-heading">
    Current Sprint
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-12">
        <%= render 'sprints/sprint_slider', sprint: project.current_sprint, sprint: project.current_sprint.sprint  %>
      </div>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    Remaining Sprints
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-12">
        <% project.sprints.order('sprint ASC').each_with_index do |sprint, count| %>
          <% if count > project.current_sprint.sprint %>
            <%= render 'sprints/sprint_slider', sprint: sprint, sprint: sprint.sprint %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    Completed Sprints
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-12">
        <% project.sprints.order('sprint ASC').each_with_index do |sprint, count| %>
          <% if count < project.current_sprint.sprint %>
            <%= render 'sprints/sprint_slider', sprint: sprint, sprint: sprint.sprint  %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>